<h1>Listing categorias</h1>

<table>
  <tr>
    <th>Descripcion</th>
    <th>Imagen url</th>
    <th>Fecha creacion</th>
    <th>Fecha actualizacion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categorias.each do |categoria| %>
  <tr>
    <td><%= categoria.descripcion %></td>
    <td><%= categoria.imagen_url %></td>
    <td><%= categoria.fecha_creacion %></td>
    <td><%= categoria.fecha_actualizacion %></td>
    <td><%= link_to 'Show', categoria %></td>
    <td><%= link_to 'Edit', edit_categoria_path(categoria) %></td>
    <td><%= link_to 'Destroy', categoria, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

